.code-bar
  ul.actions.list-inline
    li.dropdown(dropdown="", ng-show='frame.type == "cypher"')
      a.button.fa.fa-download.dropdown-toggle(dropdown-toggle="")
      ul.dropdown-menu
        li
          a(exportable ng-click='exportSVG()', ng-show='isActive("graph")') Export SVG
          a(exportable ng-click='exportJSON(frame.response)') Export JSON
          a(exportable ng-click='exportCSV(frame.response.table)') Export CSV
    li
      a.button.fa.fa-expand(ng-click="toggleFullscreen(true)", tooltip-placement='bottom', tooltip='Fullscreen', ng-show='frame.fullscreenable')
    li
      a.button.fa.fa-times-circle(ng-click='frames.close(frame)', tooltip-placement='bottom', tooltip='Close')
  .status
    span.prompt.code(ng-if='frame.type == "cypher"') $
    span.code.mono(click-to-code='frame.input') {{frame.input | uncomment}}
  a.close-fullscreen.fa.fa-compress(ng-click="toggleFullscreen(false)")
